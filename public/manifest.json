{
  "manifest_version": 2,
  "name": "Downloads",
  "version": "0.1.0",
  "description": "Downloads box",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["app/background.js"],
    "persistent": true
  },
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "contextMenus",
    "chrome://favicon/"
  ],
  "content_security_policy": "img-src chrome://favicon; script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'"
}